{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "https:yourdomain:7245",
        "Certificate": {
          "Path": "path_to_ypurcertificate.pfx",
          "Password": "your-certificate-password"
        }
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=CloudNextDB;Username=postgres;Password=root"
  },
  "AppSettings": {
    "ApiBaseUrl": "https://localhost:7245",
    "AppBaseUrl": "https://localhost:5173",
    "Certificate": {
      "Path": "path_to_your_local_certificates/<your-ip>-cert.pfx",
      "Password": "your-certificate-password"
    }
  },
  "PasswordStrings": {
    "UpperCaseAlphabets": "ABCDEFGHIJKLMNOPQRSTUVWXYZ",
    "LowerCaseAlphabets": "abcdefghijklmnopqrstuvwxyz",
    "Digits": "0123456789",
    "SpecialCharacters": "!@#$%^&*()_+=-"
  },
  "Encryption": {
    "Salt": "your-32-character-random-salt"
  },
  "Security": {
    "RootKey": "your-64-character-root-key"
  },
  "Stakeholders": {
    "Email": "your-dev-mail"
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "SmtpClient": {
    "Host": "smtp.gmail.com",
    "Port": "587",
    "Username": "your-email",
    "Password": "your-app-password",
    "ApplicationName": "CloudNext"
  },
  "Directories": {
    "LogFolderPath": "Logs",
    "ImageFolderPath": "Resources/Images"
  },
  "FileNames": {
    "BackgroundImage": "seashore_background.png",
    "ShowPasswordIcon": "show-password.png",
    "HidePasswordIcon": "hide-password.png",
    "LogFile": "CloudNext"
  },
  "Jwt": {
    "Issuer": "CloudNextAuth",
    "Audience": "CloudNextUsers",
    "SecretKey": "your-very-secure-secret-key"
  }
}
